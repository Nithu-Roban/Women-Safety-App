<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B8AB82"

    tools:ignore="MissingClass"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="120dp" />

    <ImageView
        android:id="@+id/img1"
        android:layout_width="164dp"
        android:layout_height="88dp"
        android:background="@color/black"
        app:srcCompat="@drawable/icon1" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="247dp"
        android:layout_height="91dp"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="-39dp"
        android:layout_marginEnd="0dp"
        android:layout_toRightOf="@id/img1"
        android:background="@color/black"
        app:srcCompat="@drawable/loginbg" />


    <ImageView
        android:id="@+id/img2"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_below="@id/img1"
        android:layout_marginLeft="-27dp"
        android:layout_marginTop="0dp"
        android:background="@color/black"
        app:srcCompat="@drawable/icon12" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="396dp"
        android:layout_height="45dp"
        android:layout_below="@id/img2"
        android:layout_marginTop="23dp"
        android:text="Track the Current Location"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button4"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/img2"
        android:layout_marginLeft="-344dp"
        android:layout_marginTop="65dp"
        android:layout_toRightOf="@id/textView2"
        android:onClick="onLocate"
        android:text="Location"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="238dp"
        android:layout_height="37dp"
        android:layout_below="@id/button4"
        android:layout_marginLeft="-95dp"
        android:layout_marginTop="23dp"
        android:layout_toRightOf="@id/img1"
        android:text="Latitude"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/lat"
        android:layout_width="219dp"
        android:layout_height="41dp"
        android:layout_below="@id/textView4"
        android:layout_marginLeft="-86dp"
        android:layout_marginTop="11dp"
        android:layout_toRightOf="@id/img1"
        android:ems="10"
        android:inputType="text"
        android:text="" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="238dp"
        android:layout_height="37dp"
        android:layout_below="@id/lat"
        android:layout_marginLeft="-89dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@id/img1"
        android:text="Longitude"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/longt"
        android:layout_width="227dp"
        android:layout_height="37dp"
        android:layout_below="@id/textView5"
        android:layout_marginLeft="-86dp"
        android:layout_marginTop="9dp"
        android:layout_toRightOf="@id/img1"
        android:ems="10"
        android:inputType="text"
        android:text="" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="238dp"
        android:layout_height="37dp"
        android:layout_below="@id/longt"
        android:layout_marginLeft="-89dp"
        android:layout_marginTop="17dp"
        android:layout_toRightOf="@id/img1"
        android:text="Map Location "
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/maploc"
        android:layout_width="245dp"
        android:layout_height="127dp"
        android:layout_below="@id/textView6"
        android:layout_marginLeft="-97dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/img1"
        android:ems="10"
        android:inputType="text"
        android:text="" />

</RelativeLayout>
