<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B8AB82"

    tools:ignore="MissingClass"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="120dp" />

    <ImageView
        android:id="@+id/img1"
        android:layout_width="164dp"
        android:layout_height="88dp"
        android:background="@color/black"
        app:srcCompat="@drawable/icon1" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="247dp"
        android:layout_height="91dp"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="-39dp"
        android:layout_marginEnd="0dp"
        android:layout_toRightOf="@id/img1"
        android:background="@color/black"
        app:srcCompat="@drawable/loginbg" />


    <ImageView
        android:id="@+id/img2"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_below="@id/img1"
        android:layout_marginLeft="-27dp"
        android:layout_marginTop="0dp"
        android:background="@color/black"
        app:srcCompat="@drawable/icon12" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="180dp"
        android:layout_height="59dp"
        android:layout_below="@id/img2"
        android:layout_marginTop="23dp"
        android:text="Add Friends or Trusted Contacts"
        android:textAlignment="viewEnd"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button4"
        android:layout_width="183dp"
        android:layout_height="72dp"
        android:layout_below="@id/img2"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="22dp"
        android:layout_toRightOf="@id/textView2"
        android:text="Add Contact"
        android:onClick="onContact"
        android:textSize="20sp" />


    <ImageButton
        android:id="@+id/SOS"
        android:layout_width="155dp"
        android:layout_height="107dp"
        android:layout_below="@id/textView2"
        android:layout_marginLeft="-41dp"
        android:layout_marginTop="61dp"
        android:layout_toRightOf="@id/img1"
        android:background="#0043041A"
        android:shadowColor="#F81C1212"
        android:onClick="onPanic"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:srcCompat="@drawable/alert" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="257dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/SOS"
        android:layout_marginLeft="-95dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/textView2"
        android:background="#00D11313"
        android:text="PANIC BUTTON"
        android:textColor="#A30909"
        android:textSize="34sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button7"
        android:layout_width="229dp"
        android:layout_height="71dp"
        android:layout_alignBottom="@id/textView2"
        android:layout_marginBottom="-436dp"
        android:background="@color/black"
        android:onClick="onHelpline"
        android:text="Helpline"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="192dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@id/button4"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="-424dp"
        android:layout_toRightOf="@id/button7"
        android:background="#490404"
        android:onClick="onTracking"
        android:text="Track Me"
        android:textSize="24sp" />




</RelativeLayout>
