<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"

    tools:ignore="MissingClass"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp">


    <ImageView
        android:id="@+id/img1"
        android:layout_width="152dp"
        android:layout_height="128dp"
        app:srcCompat="@drawable/women" />

    <ImageView
        android:id="@+id/img2"
        android:layout_width="196dp"
        android:layout_height="54dp"
        android:layout_marginLeft="-19dp"
        android:layout_toRightOf="@id/img1"
        app:srcCompat="@drawable/icon1" />

    <ImageView
        android:id="@+id/img3"
        android:layout_width="258dp"
        android:layout_height="50dp"
        android:layout_below="@id/img2"
        android:layout_marginLeft="-53dp"
        android:layout_marginTop="21dp"
        android:layout_toRightOf="@id/img1"
        app:srcCompat="@drawable/icon12" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img1"
        android:layout_marginTop="32dp"
        android:text="Enter Phone Number For Verification"
        android:textAlignment="center"
        android:textColor="#DC1664"
        android:textSize="34sp"
        android:textStyle="bold" />

    <!--    <com.rilixtech.widget.countrycodepicker.CountryCodePicker-->
    <!--        android:id="@+id/countryCodePicker"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_gravity="center"-->
    <!--        app:ccp_autoDetectLanguage="true"-->
    <!--        app:ccp_defaultNameCode="US"-->
    <!--        app:ccp_showFullName="false"-->
    <!--        app:ccp_showNameCode="true" />-->


    <TextView
        android:id="@+id/tv4"
        android:layout_width="56dp"
        android:layout_height="52dp"
        android:layout_below="@id/tv1"
        android:layout_marginTop="55dp"
        android:text="" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="270dp"
        android:layout_height="52dp"
        android:layout_below="@id/tv4"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="-48dp"
        android:layout_toEndOf="@+id/tv4"
        android:layout_toRightOf="@id/tv4"
        android:background="#81212323"
        android:ems="10"
        android:inputType="phone"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/button2"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@id/tv4"
        android:background="#817C3C55"
        android:text="Sent OPT"
        android:onClick="sentOTP"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="132dp"
        android:layout_toRightOf="@id/tv4"
        android:background="#817C3C55"
        android:text="Next"
        android:onClick="onNext"
        android:textSize="24sp" />


</RelativeLayout>
