<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B8AB82"

    tools:ignore="MissingClass"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="120dp" />

    <ImageView
        android:id="@+id/img1"
        android:layout_width="164dp"
        android:layout_height="88dp"
        android:background="@color/black"
        app:srcCompat="@drawable/icon1" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="247dp"
        android:layout_height="91dp"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="-39dp"
        android:layout_marginEnd="0dp"
        android:layout_toRightOf="@id/img1"
        android:background="@color/black"
        app:srcCompat="@drawable/loginbg" />


    <ImageView
        android:id="@+id/img2"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_below="@id/img1"
        android:layout_marginLeft="-27dp"
        android:layout_marginTop="0dp"
        android:background="@color/black"
        app:srcCompat="@drawable/icon12" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="396dp"
        android:layout_height="45dp"
        android:layout_below="@id/img2"
        android:layout_marginTop="23dp"
        android:text="Add Emergency Contact"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button4"
        android:layout_width="321dp"
        android:layout_height="84dp"
        android:layout_below="@id/img2"
        android:layout_marginLeft="-347dp"
        android:layout_marginTop="86dp"
        android:layout_toRightOf="@id/textView2"
        android:onClick="selectContact"
        android:text="Add Contact"
        android:textSize="20sp" />

    <ListView
        android:id="@+id/ListView"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:layout_below="@+id/button4"
        android:layout_marginTop="-2dp" />

<!--    <TextView-->
<!--        android:id="@+id/location"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_below="@id/button4"-->
<!--        android:text="TextView" />-->


    <EditText
        android:id="@+id/contactNameTextView"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_below="@+id/ListView"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text=""
        android:textSize="20sp" />

    <EditText
        android:id="@+id/contactNumberTextView"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_below="@+id/contactNameTextView"
        android:layout_marginTop="72dp"
        android:gravity="center"
        android:text=""
        android:textSize="20sp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="149dp"
        android:layout_height="76dp"
        android:layout_below="@id/contactNumberTextView"
        android:layout_marginLeft="-33dp"
        android:layout_marginTop="61dp"
        android:layout_toRightOf="@id/img1"
        android:onClick="onSave"
        android:text="Save" />

</RelativeLayout>
